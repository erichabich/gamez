{{! Insert everything in this file into the {body} of the default.hbs template, which contains our header/footer. }}
{{!< default}}

{{! The main content area on the homepage }}
<main class="content" role="main">
    <div class="container">
    
    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}"><h5>{{date format="DD MMM YYYY"}}</h5></time></span>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

        </header>
        <section class="post-excerpt">   
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{!! pagination}}

    </div> {{!! end .container}}

</main>